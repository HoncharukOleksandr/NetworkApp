<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/detail_poster"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/backgrounds/scenic"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/film_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/between_height"
        android:layout_marginTop="@dimen/between_height"
        android:layout_marginEnd="@dimen/between_height"
        android:layout_marginBottom="@dimen/between_height"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/between_height"
        android:layout_marginTop="@dimen/between_height"
        android:layout_marginEnd="@dimen/between_height"
        android:layout_marginBottom="@dimen/between_height" />

    <TextView
        android:id="@+id/genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/between_height"
        android:layout_marginTop="@dimen/between_height"
        android:layout_marginEnd="@dimen/between_height"
        android:layout_marginBottom="@dimen/between_height" />

    <TextView
        android:id="@+id/plot_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/between_height"
        android:layout_marginTop="@dimen/between_height"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp" />
</LinearLayout>